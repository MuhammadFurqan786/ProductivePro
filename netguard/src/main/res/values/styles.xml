    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseThemeDark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="expander">@drawable/expander_black</item>
